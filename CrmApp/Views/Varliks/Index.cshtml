@model IEnumerable<CrmApp.Models.Varlik>

@{
    ViewData["Title"] = "Index";
}

<div class="card">
    <div class="card-body">
        <h4>Varlık Listesi</h4>
        <hr />
        <p>
            <a class="btn btn-secondary" asp-action="Create">Yeni Oluştur New</a>
        </p>
        <p><a class="btn btn-primary" asp-controller="VarlikCategories" asp-action="Create"> Kategori Ata</a></p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Varlık Adı
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.VarlikName)
                        </td>
                        <td>
                            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Düzelt</a> |
                           @* <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
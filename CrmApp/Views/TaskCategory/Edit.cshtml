@model CategoryEditViewModel

@{
    ViewData["Title"] = "Edit";
}


<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <h4>Kategori Oluştur</h4>
                <hr />
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="CategoryName" class="control-label">Kategori Adı</label>
                        <input asp-for="CategoryName" class="form-control" />
                        <span asp-validation-for="CategoryName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Düzelt" class="btn btn-secondary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="List" class="btn btn-info">Kategori Listesine Geri Dön</a>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
        }
